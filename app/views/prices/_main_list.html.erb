<%= link_to "カードを登録する",new_card_path %>
<%= link_to "店舗を登録する",new_shop_path %>

  

  <div class="table">

  <table cellpadding="20">
      <div class="table-header">
        <div class="table-header-1">
          <tr>
            <th colspan="5">カード情報</th>
            <th colspan="4">価格</th>
          </tr>
        </div>
        <div class="table-header-2">
          <tr>
            <th>カード名</th>
            <th>収録弾</th>
            <th>レアリティ</th>
            <th>カードタイプ</th>
            <th>属性</th>
            <% @shops.each do |shop| %>
              <th><%= shop.name %></th>
            <% end %>
          </tr>
        </div>
      </div>

      <div class="table-data">
        <% @cards.each do |card| %>
          <tr>
            <th><%= card.name %></th>
            <th><%= card.expansion[:name] %></th>
            <th><%= card.rarity[:name] %></th>
            <th><%= card.card_type[:name] %></th>
            <th><%= card.attribute[:name] %></th>
            <th><%= link_to "2000" %></th>
            <th><%= link_to "2500" %></th>
            <th><%= link_to "2300" %></th>
            <th><%= link_to "3000" %></th>
          </tr>
        <% end %>
      </div>
    </table>
</div>

<%= link_to "価格を登録する",new_price_path %>

<% @prices.each do |price| %>
  <p><%= price.price %></p>
  <ul class="more_list">
    <li><%= link_to '編集', edit_price_path(price.id), method: :get %></li>
    <li><%= link_to '削除', price_path(price.id), method: :delete %></li>
  </ul>
<% end %>

